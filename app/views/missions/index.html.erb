<h1><%= t("Mission_List")%></h1>



<%= link_to "新增任務", new_mission_path %>

<table>
  <thead>
    <tr>
      <td>任務名稱</td>
      <td>優先次序</td>
      <td>任務狀態</td>
      <td>開始時間</td>
      <td>截止時間</td>
      <td>功能</td>
    </tr>
  </thead>
  <tbody>
    <% @missions.each do |mission| %>
    <tr>
      <td> <%= mission.name %></td>
      <td> <%= t("#{mission.priority}") %></td>
      <td> <%= t("#{mission.status}")  %></td>
      <td> <%= mission.start_time %></td>
      <td> <%= mission.complete_time %></td>
      <td>
        <%= link_to "編輯", edit_mission_path(mission)%>
        <%= link_to "刪除", mission_path(mission), method: "delete", data: { confirm: "are you sure?"} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "中文版", :controller => controller_name, :action => action_name, :locale => "zh-TW" %>
<%= link_to "English", :controller => controller_name, :action => action_name, :locale => "en" %>